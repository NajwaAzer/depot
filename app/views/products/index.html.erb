<h1>Listing products</h1>

<table class= "table table-striped table-hover">
<% @products.each do |product| %>
  <tr>

    <thead>
    </thead>
    <tbody>
      <td>
        <%= image_tag(product.image_url, class: 'img-polaroid') %>
      </td>

      <td>
        <dl>
          <dt><%= product.title %></dt>
          <dd><%= truncate(strip_tags(product.description),
                 length: 180) %></dd>
        </dl>
      </td>

      <td class="list_actions">
        <%= link_to 'Show', product, class:'btn btn-small' %><br/>
        <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-small btn-warning' %><br/>
        <%= link_to 'Destroy', product, method: :delete,
                    data: { confirm: 'Are you sure?' } , class: 'btn btn-small btn-danger'%></div>
      </td>
    </tr>
  </tbody>
<% end %>
</table>

<br />

<%= link_to 'New product', new_product_path, class:"btn" %>


